@require 'variables.styl'
@require 'colors.styl'

#___gatsby
  #api-descriptions.cards
    .col-md.d-flex
      flex-basis 50%
  .card
    display flex
    margin 1rem
    width 100%
    background-color $color__main
    border-width 8px 
    border-style solid
    border-radius 0
    .card-header
      border-width 0
      border-radius 0
      h3
        font-size 1rem
    .card-body
      background-color $color__helpers--light
      border-width 0
      border-radius 0
      & + a:link
        text-decoration none
    .card-footer
      padding-top 1em
      padding-bottom 1em
      border-width 0
      border-radius 0
    @media (min-width 576px)
      margin 1rem 0rem 1rem 0
  
    
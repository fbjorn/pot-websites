#___gatsby, #___gatsby .page-content
    .button, button.btn, .btn
        padding 0.6em 1.4em
        margin 0 1em 1em 0
        border-radius 1em
        .nav-link__btn
            color white
            
    .form-group.input-submit
        label
            display block
        input
            display inline-block
            width 66%
            vertical-align baseline
        button
            display inline-block
            width 33%
            padding 0.4em 1em
            margin 0
            vertical-align baseline
            border-radius 0 2em 2em 0
            // font-size 27px
        small.form-text
            margin-top 1em
            
            
            
    .btn-clipboard 
        position absolute
        top .5rem
        right 1rem
        z-index 10
        display block
        padding .25rem .5rem
        font-size 75%
        color #eee
        cursor pointer
        background-color transparent
        border 0
        border-radius .25rem
    
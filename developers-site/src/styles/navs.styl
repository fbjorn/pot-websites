      .reveal
        display block
        position absolute
        top 0
        color white
        transition all 0.3s ease-in 
        .search-wrapper
          position relative
          text-align right
          width 320px
          padding-left 299px
          overflow hidden
          transform translate(-250px, 10px) 
          transition all 0.5s ease-in 
          // border 1px solid red
          input
            // position absolute
            // left 300px
            // top 0
            padding 0.4em 1em
            width auto

      .reveal-hex
        display block
        position absolute
        top 0
        color white
        transition all 0.3s ease-in 
        .hexagon
          position absolute
          top -34px
          background white
          p.language
            text-align center
          p, a, a:visited
            color white // $color__main--darkest
        .hexagon.blue
          background-color $color__main--dark
          &:before
            bottom 100%
            border-bottom 28.87px solid $color__main--dark
          &:after
            top 100%
            width 0
            border-top 28.87px solid $color__main--dark !important

      .hex-wrapper
        &:hover 
          > .reveal
            transform translateX(-75px) 
          .search-wrapper
            padding-left 0px
            // transform translate(-270px, 10px) 
            input
              width auto
              // transform translateX(-10px) 


      .hexagon
        position relative
        width 100px
        height 57.74px
        background-color #ffffff
        // margin 28.87px 0
        margin 35px 0
        transition all 0.3s
        &:hover
          cursor pointer
        img
          position absolute
          width 50%
          top 5%
          left 25%
        &:before
          bottom 100%
          border-bottom 28.87px solid #ffffff
        &:after
          top 100%
          width 0
          border-top 28.87px solid #ffffff

      .hexagon:before, .hexagon:after
        content ""
        position absolute
        width 0
        border-left 50px solid transparent
        border-right 50px solid transparent



      .flip-box {
        background-color: transparent;
        width: 100px;
        height: 57.74px;
        perspective: 1000px; /* Remove this if you don't want the 3D effect */
      }

      /* This container is needed to position the front and back side */
      .flip-box-inner {
        position: relative;
        width: 100%;
        height: 100%;
        // text-align: center;
        transform-origin: -3px;
        transition: transform 0.8s;
        transition-delay: 0.2s;
        transform-style: preserve-3d;
      }

      /* Do an horizontal flip when you move the mouse over the flip box container */
      .hex-wrapper:hover .flip-box-inner {
        transform: rotateY(-180deg);
      }

      /* Position the front and back side */
      .flip-box-front, .flip-box-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
      }

      /* Style the front side */
      .flip-box-front {
        background-color: #bbb;
        color: black;
      }

      /* Style the back side */
      .flip-box-back {
        background-color: dodgerblue;
        color: white;
        transform: rotateY(180deg);
      }
      

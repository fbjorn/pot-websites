@require 'variables.styl'

// Typography
@import url('https://fonts.googleapis.com/css?family=Fira+Sans:300,400,500,600,700')
@import url('https://fonts.googleapis.com/css?family=Fira+Mono:400,500,700')
// $base-font-size = 62.5%
// *=10px in most browsers, if user haven't changed font-settings

$base-font-size = 100%

html 
  font-size $base-font-size 
body 
  font-family 'Fira Sans', sans-serif 
  
#___gatsby 
  * 
    font-family 'Fira Sans', sans-serif
    font-weight 400
    line-height 1.125em
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
  h1, h1 a
    margin-top 1.2em
    margin-bottom 10px
    font-size 42px 
    font-weight 400
    line-height 44px
  h2, h2 a
    margin-top 1em
  h3, h4, h5, h6, h3 a, h4 a, h5 a, h6 a
    margin-top 0.5em
  p 
    font-size 20px 
    font-weight 400
    line-height 22.6px
  code
    font-family 'Fira Mono', Courier, monospace
    font-size 20px 
    font-weight 400
    line-height 1.9
  pre
    color white
    code, code span
      color white
      font-size 20px
      font-weight 400
  code
    display inline-block
    padding 0.2em 0.4em
    margin 0 0.4em
    // font-style italic
    background $color__main--medium
    color white
    font-weight 400
    letter-spacing 1px
  li 
    font-size 20px 
    font-weight 400
    line-height 22.6px
  strong
    font-weight 600
  
  /* SHARED PROPERTIES */
  p, h1, h1 a, h2, h3, h4, h5, h6, h1 a, h2, a, h3 a, h4 a, h5 a, h6 a 
    margin-bottom 0.5em
  
  h1, h1 a, h2, h3, h4, h5, h6 
    line-height 1.05em 
    // color #7955ff
  
  /* SPECIFIC PROPERTIES */
  p, label, input, button 
    font-weight 400 
    font-size 27px 
    line-height 1.125em 
    color #141414
  
  a
    font-size inherit
    
  li 
    font-weight 400 
    font-size 27px 
    line-height 1.125em 
    color #141414
  
  code 
    font-weight 300 
    font-size 20px 
    line-height 1.9em 
    letter-spacing 1px
  
  h1, h1 a 
    font-weight 400 
    font-size 63px 
    line-height 1.125em 
    letter-spacing 0.01em
  
  h2 
    font-weight 400 
    font-size 48px 
    line-height 1.125em 
    letter-spacing 0.01em
  
  h3 
    font-weight 500 
    font-size 36px 
    line-height 1.125em 
    letter-spacing 0.02em
  
  h4 
    font-weight 500 
    font-size 30px 
    line-height 1.125em 
    letter-spacing 0.02em
  
  h5 
    font-weight 600 
    font-size 27px 
    line-height 1.125em 
    letter-spacing 0.03em
  
  h6 
    font-weight 500 
    font-size 24px 
    line-height 1.125em 
    letter-spacing 0.03em
  
  .megaheadline  
    font-weight 200 
    font-size 108px 
    line-height 0.95em
  .post-meta  
    font-weight 400 
    font-size 15px 
    line-height 1.0em 
    color #7955ff 
    margin-bottom 1em
  .blockquote  
    font-weight 400 
    font-style italic 
    font-size 27px 
    line-height 1.125em
  
  /* RESPONSIVE 1000-668px */
  @media (max-width 1000px) 
    p, li, a, label, input, button 
      font-size 2.7vw
    h1, h1 a
       font-size 6.3vw
    h2
       font-size 4.8vw
    h3
       font-size 3.6vw
    h4
       font-size 3.0vw
    h5
       font-size 2.7vw
    h6
       font-size 2.4vw
    code 
      font-size 2.7vw
    pre
      code, code span
        font-size 2.7vw
  .megaheadline
     font-size 10.8vw
  .blockquote
     font-size 2.7vw
  
  /* RESPONSIVE 667-640 */
  @media (max-width 667px) 
    p, li, a, label, input, button
       font-size 18px
    h1, h1 a
       font-size 42px
    h2
       font-size 36px
    h3
       font-size 24px
    h4
       font-size 20px
    h5
       font-size 18px
    h6
       font-size 16px
    code 
      font-size 18px
    pre
      code, code span
        font-size 18px
  .megaheadline
     font-size 72px
  .blockquote
     font-size 18px
  
  /* RESPONSIVE SMALLEST 640- (about 80%) */
  @media (max-width 640px) 
    p, li, a, label, input, button
       font-size 15px
    h1, h1 a
       font-size 34px
    h2
       font-size 29px
    h3
       font-size 19px
    h4
       font-size 16px
    h5
       font-size 15px
    h6
       font-size 13px
    code 
      font-size 14px
    pre
      code, code span
        font-size 14px
    .megaheadline
       font-size 58px
    .blockquote
       font-size 15px
  
  

  // Component typo styles
  
  nav.apps 
    a
      font-size 12px
      font-weight 500
      
  footer
    @media( min-width $mobi-navi-breakpoint )
      h5, p, a:link
        font-size 20px
        line-height 20px
        margin-bottom 0

